{% extends "layout.njk" %}

{% block head %}
<title>Foodfy | {{recipe.title}}</title>
{% endblock %}

{% block content%}
<section class="recipe-wrapper">
    <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
    <h3>{{recipe.title}}</h3>
    <p class="author">por {{recipe.author}}</p>

    <div class="ingredients">
        <div class="ingredients__title">
            <h2>Ingredientes</h2>
            <a class="button">ESCONDER</a>
        </div>

        <div class="recipe__list">
            <ul class="content show" >
            {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor%}
            </ul>
        </div>
    </div>

    <div class="preparation">
        <div class="preparation__title">
            <h2>Modo de Preparo</h2>
            <a class="button">ESCONDER</a>
        </div>
        
        <div class="recipe__list">            
          <ul class="content show">
          {% for prep in recipe.preparation %}
            <li>{{prep}}</li>
          {% endfor%}
          </ul>
        </div>
    </div>

    <div class="information">
        <div class="info__title">
            <h2>Informações adicionais</h2>
            <a class="button">ESCONDER</a>
        </div>
    
        <p class="content show">{{recipe.information}}</p>
    </div>

</section>
  <script src="/scripts.js"></script>
{% endblock %}