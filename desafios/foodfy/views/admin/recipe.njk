{% extends "layout_admin.njk" %}

{% block head %}
<title>Foodfy | {{recipe.title}}</title>
{% endblock %}

{% block content%}

<div id="content">
    <section class="more_access">
        <div class="card recipe">
            <div class="card" id="{{recipe.id}}">
                <div class="card_img">
                    <div class="top_card">
                        <h2>Receita: {{recipe.title}}</h2>
                        <a href="/admin/edit/{{recipe.id}}">Editar receita</a>
                    </div>
                    <img src="{{recipe.image_url}}" alt="Imgem de {{recipe.title}}">
                </div>
            </div>
        </div>
        <div class="info_recipe">
            <h4>{{recipe.title}}</h4>
            <p class="author">por {{recipe.author}}</p>
        </div>
    </section>
</div>

<div class="about_recipe">
    <div class="ingredients">
        <h3>Ingredientes</h3>
        <ul>
            {% for ingredient in recipe.ingredients %}
            <li> -{{ingredient}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="preparation">
        <h3>Modo de preparo</h3>
        <ul>
            {% for preparation in recipe.preparation %}
            <li> -{{preparation}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="history">
        <h3>Informações adicionais</h3>
        <p>{{recipe.information}}</p>
    </div>
</div>

{% endblock %}