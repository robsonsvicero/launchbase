{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
  <table width="100%">
    <thead>
      <tr>
        <th>Professor</th>
        <th>Atendimento</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {% for teacher in teachers %}
      <tr>
        <td>
          <span style="background-image: url({{teacher.avatar_url}})"></span>
          {{teacher.name}}
        </td>
        {% for service in teacher.services %}
        <td class="service"><span></span>{{service}}</td>
        {% endfor %}
        <td><a href="/teachers/{{teacher.id}}">ver</a></td>
      </tr>

      {% endfor %}
    </tbody>
  </table> 
</div>
{% endblock content%}