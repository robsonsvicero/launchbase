<div class="item">
      <div>Avatar URL</div>
      <div>
        <input
          type="url"
          name="avatar_url"
          placeholder="http://"
          value="{{ teacher.avatar_url}}"
        >
      </div>
    </div>

    <div class="item">
      <div>Teacher</div>
      <div>
        <input
          type="text"
          name="name"
          placeholder="Nome do Professor"
          value="{{ teacher.name}}"
        >
      </div>
    </div>

    <div class="item">
      <div>Data de nascimento</div>
      <div>
        <input 
        type="date"
        name="birth"
          value="{{ teacher.birth }}"
        >
      </div>
    </div>

    <div class="item">
      <div>Grau de escolaridade</div>
      <div>
        <select name="schooling">
          <option
            value="medio"
            {% if teacher.schooling == "medio" %}
            selected="selected" {% endif %}
            >Ensino Médio Completo</option>
          <option
            value="superior"
            {% if teacher.schooling == "superior" %}
            selected="selected" {% endif %}
            >Ensino Superior Completo</option>
          <option 
            value="mestrado"
            {% if teacher.schooling == "mestrado" %}
            selected="selected" {% endif %}
            >Mestrado</option>
          <option 
            value="doutorado"
            {% if teacher.schooling == "doutorado" %}
            selected="selected" {% endif %}
            >Doutorado</option>
        </select>
      </div>
    </div>

    <div class="item">
      <div>Tipo de aula</div>
      <div>
        <span><input 
        type="radio" 
        name="classes" 
        value="P" 
        {% if teacher.classes == "P" %}
        checked
        {% endif %}
        > Presencial</span>

        <span><input 
        type="radio" 
        name="classes" 
        value="D" 
        {% if teacher.classes == "D" %}
        checked
        {% endif %}
        > À Distância</span>
      </div>
    </div>

    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input 
        type="text" 
        name="services"
        placeholder="Separe os serviços prestados por vírgula"
        value="{{ teacher.services }}"
        >
      </div>
    </div>