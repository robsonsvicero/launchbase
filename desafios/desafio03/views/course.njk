{% extends "layout.njk" %} {% block head %}
<title>Desafio 3.1 | Conteúdo</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> {% endblock %} {% block content %}
<h1 class="title">Conteúdos</h1>

<div id="cards">

  {% for item in items %}
  <div class="card" id="{{item.id}}">
    <div class="card__image-container"><img src="{{item.avatar}}" alt="Imagem de {{item.id}}">
    </div>
    <div class="card__content">
      <p>{{item.title}}</p>
    </div>
    <div class="card__info">
      <p>por {{item.author}}</p>
      <p>{{item.time}}</p>
    </div>
  </div>
 {% endfor %}
</div>

<footer>
  <div id="links-footer" class="links">
    <a href="https://github.com/Rocketseat" target="_blank">Github</a>
    <a href="https://www.instagram.com/rocketseat_oficial/" target="_blank">Instagram</a>
    <a href="https://www.facebook.com/rocketseat" target="_blank">Facebook</a>
  </div>
</footer>

<div class="modal-overlay">
  <div class="modal">
    <a class="max-modal">
      <i class="material-icons">crop_square</i>
    </a>
    <a class="close-modal">
      <i class="material-icons">close</i>
    </a>

    <div class="modal-content">
      <iframe src="" frameborder="0"></iframe>
    </div>
  </div>
</div>

<script src="/scripts.js"></script>
{% endblock %}