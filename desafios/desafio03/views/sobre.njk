{% extends "layout.njk" %}{% block head %}
<title>Desafio 3.1 | Sobre</title>
{% endblock %}
{% block content %}
  <div id="wrapper">
    <img src="{{about.avatar}}" alt="Imagem da {{about.name}}">
    <h1>{{about.name}}</h1>
    <h3>{{about.description}}</h3>
    <ul>
      <li>JavaScript</li>
      <li>ES6+</li>
      <li>React Native</li>
      <li>React JS</li>
      <li>Node.js</li>
    </ul>
  </div>

  <footer>
    <div id="links-footer" class="links">
      {% for link in about.links %}
      <a href="{{link.url}}" target="_blank">{{link.name}}</a>
      {% endfor %}
    </div>
  </footer>

{% endblock %}